// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit{
  id Int

  name String
  description String
  urlImage String
  isActive Boolean

  createdAt DateTime
  updatedAt DateTime
}
model User {
  id Int

  name String
  cpf String
  email String
  pass String
  phone String
  signature Float
  birth Date

  createdAt DateTime
  updatedAt DateTime
}
